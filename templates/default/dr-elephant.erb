#!/bin/sh
#
# Startup script for drelephant
#
### BEGIN INIT INFO
# Provides:                     drelephant*
# Required-Start:                 
# Should-Start:                 
# Required-Stop:                  
# Default-Start:                2 3 4 5
# Default-Stop:                 0 1 6
# Short-Description:            start and stop drelephant-*
# Description:                  Start/Stop/Restart drelephant
### END INIT INFO

# Variables

START_PROG="export HADOOP_HOME=<%= node.apache_hadoop.home %>; export PATH=<%= node.apache_hadoop.home %>/bin:$PATH; <%= node.drelephant.home %>/bin/start.sh <%= node.drelephant.home %>/conf"  
STOP_PROG="<%= node.drelephant.home %>/bin/stop.sh"  

RETVAL=0

ulimit -n 65000

EXEC_WITH_USER="su <%= node.drelephant.user %> -c"

start() {
  $EXEC_WITH_USER "$START_PROG"
  return $?
}

stop() {
  $EXEC_WITH_USER "$STOP_PROG"
  return $?
}

restart() {
  $EXEC_WITH_USER "$STOP_PROG"
  $EXEC_WITH_USER "$START_PROG"
  return $?
}

status() {
  PID_FILE=/tmp/drelephant.pid
  if [ -f $PID_FILE ] ; then
     PID=`cat $PID_FILE`
     kill -0 $PID
     res=$?
  else 
     res=1
  fi
  if [ $res -eq 0 ] ; then
   echo "drelephant($PID) is running"
  else
   echo "drelephant is not running"
  fi
  return $res
}


# user-supplied parameter to stop/start/restart process.
case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  reload)
    restart
    ;;
  status)
    status
    ;;
  -h|--help)
    echo ""
    echo "usage: <prog> start|stop|restart|status"
    echo ""
    exit 0
    ;;
  *)
    echo $"Usage: <prog> {start|stop|restart|status}"
    exit 1
  esac


exit $RETVAL
